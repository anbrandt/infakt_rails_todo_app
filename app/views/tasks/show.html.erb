<div class='main-content'>
  <div class='basic'>
    <p id='notice'><%= notice %></p>


    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1 class="mt-5">Task has been succesfully updated! </h1>

          <h2>Task title: <%= @task.title%></h2>
          <h3>Task description: <%= @task.description %></h3>
          <h3>Task deadline: <%= @task.deadline%></h3>
          <%= link_to 'Go back to tasks list', tasks_path, class: 'btn btn-warning' %>

        </div>
      </div>
    </div>
  </div>
</div>
