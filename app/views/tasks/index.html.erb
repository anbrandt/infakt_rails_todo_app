<div class='main-content'>
  <div class='basic'>
    <p id='notice'><%= notice %></p>

    <h1>Tasks</h1>
    <button type='button' class='btn btn-primary'>
      <%= link_to 'New Task', new_task_path %>
    </button>
    <% @tasks.each do |task| %>
      <div class='list'>
        <table>
          <tbody>
            <tr><td><%= task.title %></td><td rowspan='3' class='right-link'><%= link_to 'Remove/Done', task, method: :delete, data: { confirm: 'Sure that you dont have to do this task?' } %></td><td class='deadline'><%= task.deadline %></td></tr>
            <tr><td class='description'><%= task.description %></td></tr>
            <tr><td class='deadline'><%=task.deadline %></td></tr>
          </tbody>
        </table>
      </div>
    <% end %>
    <br>
  </div>
</div>
