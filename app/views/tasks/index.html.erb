<div class='main-content'>
  <div class='basic'>
    <p id='notice'><%= notice %></p>


    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1 class="mt-5">List of your tasks </h1>
          <%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
          <p></p>
          <table class="table">
            <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Deadline</th>
              <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @tasks.each do |task| %>
              <tr>
                <td><%= task.title %></td>
                <td><%= task.description %></td>
                <td><%= task.deadline %></td>
                <td><%= link_to 'Remove/Done', task, method: :delete, data: {confirm: 'Sure that you dont have to do this task?'}, class: 'btn btn-primary' %></td>
                <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary'%></td>
              </tr>
            <% end %>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>


  <br>
</div>
</div>
