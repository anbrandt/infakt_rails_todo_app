<div class='main-content'>
  <p id='notice'><%= notice %></p>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
          <%= form_for(@task, url: tasks_path, html: {class: 'basic'}) do |f| %>
            <p></p>
            <div class='mt-5'>
              <h1>Add New Task</h1>
                <%= link_to 'Go back to tasks list', tasks_path, class: 'btn btn-warning' %>
              <% if @task.errors.any? %>
                <div>
                  <ul>
                    <% @task.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
            </div>
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control', placeholder: 'Text input' %>
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control', rows: '3', placeholder: 'Description' %>

            <label>
              <span>Deadline</span>
              <%= f.date_field :deadline, class: 'form-control' %>
            </label>
            <p></p>
            <%= f.submit "Add it!", class: 'btn btn-primary' %>
          <% end %>
      </div>
    </div>
  </div>
</div>